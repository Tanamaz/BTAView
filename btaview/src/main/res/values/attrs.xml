<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="btaview">
        <!-- 图片资源 -->
        <attr name="beforeImage" format="reference"/>
        <attr name="afterImage" format="reference"/>

        <!-- 样式参数 -->
        <attr name="roundRadius" format="dimension"/>
        <attr name="scaleType">
            <enum name="centerCrop" value="0"/>
            <enum name="fitCenter" value="1"/>
        </attr>
        <attr name="lineColor" format="color"/>
        <attr name="lineWidth" format="dimension"/>

        <!-- 动画控制 -->
        <attr name="autoPlay" format="boolean"/>
        <attr name="duration" format="integer"/>
        <attr name="loop" format="boolean"/>
        <attr name="loopInterval" format="integer"/>
        <!-- 新增插值器类型 -->
        <attr name="interpolatorType">
            <enum name="linear" value="0"/>
            <enum name="accelerate" value="1"/>
            <enum name="decelerate" value="2"/>
            <enum name="accelerateDecelerate" value="3"/>
        </attr>
        <!-- 新增缩放控制属性 -->
        <attr name="maxScale" format="float" />
        <attr name="forwardDuration" format="integer" />
        <attr name="backwardDuration" format="integer" />
        <!-- 新增锚点属性 -->
        <attr name="scalePivotX" format="float" />
        <attr name="scalePivotY" format="float" />
    </declare-styleable>
</resources>